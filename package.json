{
  "name": "yutazon.me",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "description": "yutaka miyazaki's blog and resume",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "check-types": "tsc --noEmit",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore .",
    "lint-fix": "eslint /**/*.{ts,tsx} --fix",
    "lint-style": "stylelint '/**/*.{ts,tsx,css,scss}'",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "dependencies": {
    "date-fns": "^2.23.0",
    "gray-matter": "^4.0.3",
    "next": "^11.1.0",
    "next-pwa": "^5.3.1",
    "next-seo": "^4.26.0",
    "now": "^21.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-lazyload": "^3.2.0",
    "react-markdown": "^4.3.1",
    "react-syntax-highlighter": "^15.4.4",
    "remark-gfm": "^2.0.0",
    "sass": "^1.38.0",
    "serialize-javascript": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/runtime-corejs2": "^7.15.3",
    "@types/gtag.js": "^0.0.7",
    "@types/marked": "^3.0.0",
    "@types/node": "^16.7.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-lazyload": "^3.1.1",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.24.0",
    "feed": "^4.2.2",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "marked": "^3.0.1",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js, jsx, ts, tsx, json, md}": [
      "yarn lint",
      "yarn prettier-fix"
    ]
  }
}
